{
    "compilerOptions": {
        "rootDir": ".",
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "outDir": "./dist",
        "sourceMap": true,
        "strictNullChecks": true,
        "noUnusedParameters": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "lib": [
            "es5",
            "es2015",
            "dom"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "files": [
        "src/index.ts"
    ],
    "angularCompilerOptions": {
        "skipTemplateCodegen": true
    }
}