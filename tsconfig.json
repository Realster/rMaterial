{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "src",
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "outDir": "./dist",
        "sourceMap": true,
        "strictNullChecks": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "paths": {
            "@angular/core": [
                "node_modules/@angular/core"
            ],
            "rxjs/*": [
                "node_modules/rxjs/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "**/node_modules"
    ],
    "angularCompilerOptions": {
        "skipTemplateCodegen": true
    }
}